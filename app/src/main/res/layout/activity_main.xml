<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Card for Registering -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/textRegister" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_below="@id/textRegister"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card for Checking Status -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCheckStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardRegister"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/textCheckStatus" />

            <Button
                android:id="@+id/btnCheckStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Status"
                android:layout_below="@id/textCheckStatus"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card for Logout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardCheckStatus"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/textLogout" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_below="@id/textLogout"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
